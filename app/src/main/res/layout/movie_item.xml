<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/five_margin"
        android:layout_marginLeft="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/five_margin">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/touch_bg"
            android:orientation="vertical"
            android:padding="@dimen/five_margin">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/url"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"/>

            <RelativeLayout
                android:id="@+id/left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/url"
                android:layout_marginTop="@dimen/five_margin">

                <ImageView
                    android:id="@+id/size_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_spa_pink_500_18dp"/>

                <TextView
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/size_img"/>

                <ImageView
                    android:id="@+id/time_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/size_img"
                    android:layout_marginTop="@dimen/five_margin"
                    android:src="@drawable/ic_access_time_blue_500_18dp"/>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/size_img"
                    android:layout_marginTop="@dimen/five_margin"
                    android:layout_toRightOf="@id/time_img"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/url"
                android:layout_marginLeft="@dimen/twenty_margin"
                android:layout_marginTop="@dimen/five_margin"
                android:layout_toRightOf="@id/left">

                <ImageView
                    android:id="@+id/num_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_folder_open_purple_a400_18dp"/>

                <TextView
                    android:id="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/num_img"/>

                <ImageView
                    android:id="@+id/hot_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/num_img"
                    android:layout_marginTop="@dimen/five_margin"
                    android:src="@drawable/ic_whatshot_red_500_18dp"/>

                <TextView
                    android:id="@+id/hot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/num_img"
                    android:layout_marginTop="@dimen/five_margin"
                    android:layout_toRightOf="@id/hot_img"/>


            </RelativeLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>